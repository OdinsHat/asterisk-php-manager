<refentry id="package.net.net-asteriskmanager.asteriskmanager.monitor">
   <refnamediv>
    <refname><function>AsteriskManager::monitor</function></refname>
    <refpurpose>Monitor(record) a channel to given file in given format</refpurpose>
   </refnamediv>
   <refsynopsisdiv>
    <funcsynopsis>
     <funcsynopsisinfo>
      require_once &apos;/asterisk.php&apos;;
     </funcsynopsisinfo>
     <funcprototype>
      <funcdef>bool      <function>AsteriskManager::monitor</function></funcdef>
      <paramdef>string <parameter>$channel</parameter></paramdef>
      <paramdef>string <parameter>$filename</parameter></paramdef>
      <paramdef>string <parameter>$format</parameter></paramdef>
      <paramdef>integer <parameter> <optional>$mix = &null;</optional></parameter></paramdef>
     </funcprototype>
    </funcsynopsis>
    </refsynopsisdiv>

    <refsect1 id="package.net.net-asteriskmanager.asteriskmanager.monitor.desc">
     &title.desc;
     &notdocumented;
    </refsect1>
   <refsect1 id="package.net.net-asteriskmanager.asteriskmanager.monitor.param">
    &title.param;
    <para>
     <variablelist>
      <varlistentry>
       <term>
        
                        
                        &type.string;
                         <parameter>$channel</parameter>
       </term>
       <listitem>
        <para>
         Channel to monitor (e.g. SIP/234, ZAP/1)
        </para>
       </listitem>
      </varlistentry>     
     </variablelist>
     <variablelist>
      <varlistentry>
       <term>
        
                        
                        &type.string;
                         <parameter>$filename</parameter>
       </term>
       <listitem>
        <para>
         The filename to save to
        </para>
       </listitem>
      </varlistentry>     
     </variablelist>
     <variablelist>
      <varlistentry>
       <term>
        
                        
                        &type.string;
                         <parameter>$format</parameter>
       </term>
       <listitem>
        <para>
         The format of the file (e.g. gsm, wav)
        </para>
       </listitem>
      </varlistentry>     
     </variablelist>
     <variablelist>
      <varlistentry>
       <term>
        
                        
                        &type.int;
                         <parameter>$mix</parameter>
       </term>
       <listitem>
        <para>
         Boolean 1 or 0 on whether to mix
        </para>
       </listitem>
      </varlistentry>     
     </variablelist>
    </para>
   </refsect1>
   <refsect1 id="package.net.net-asteriskmanager.asteriskmanager.monitor.throws">
    &title.throws;
        <para>
      <emphasis>throws</emphasis> no exceptions thrown
    </para>
       </refsect1>
   <refsect1 id="package.net.net-asteriskmanager.asteriskmanager.monitor.note">
    &title.note;
    &note.notstatic;
   </refsect1>
</refentry>
